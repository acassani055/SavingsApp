<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/game.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
    <div id="top">
        <p id="date">12/08/2000</p>
        <h1>The Title</h1>
        <button id="incDate">Next</button>
    </div>

    <div id="upgrades" class="modal">
        <button id="happinessUpgrade" onclick="closeModal('upgrades')">+5 Happiness<br>+1 level</button>
        <button id="cancel" onclick="closeModal('upgrades')">Cancel</button>
    </div>

    <div id="funActivities" class="modal">
        <button id="act1" onclick="closeModal('funActivities')">Activity 1</button>
        <button id="act2" onclick="closeModal('funActivities')">Activitiy 2</button>
        <button id="act3" onclick="closeModal('funActivities')">Activity 3</button>
        <button id="act4" onclick="closeModal('funActivities')">Activity 4</button>
    </div>

    <div id="learnActivities" class="modal">
        <button id="learn1" onclick="closeModal('learnActivities')">+1 Income<br>+1 Day</button>
        <button id="learn2" onclick="closeModal('learnActivities')">+2 Income<br>+2 Day</button>
        <button id="learn2" onclick="closeModal('learnActivities')">+3 Income<br>+5 Day</button>
        <button id="learn2" onclick="closeModal('learnActivities')">+10 Income<br>+14 Day</button>
    </div>

    <main>
        <div id="stats">
            <p id="happiness">Happiness: 100</p>
            <p id="income">Income (per month): 1600</p>
        </div>

        <img src="data:image/jpeg;base64,">

        <div id="expenditures">
            <h4>Upcoming Expenditures: </h4>
            <div id="upcomingRent">
            <p>Rent:</p> <p id="rentPrice">$100</p><p> - </p> <p id="rentTimeUntil">2 days</p>
            </div>
            <div id="upcomingFood">
                <p>Food:</p> <p id="foodPrice">$40</p><p> - </p> <p id="foodTimeUntil">2 days</p>
            </div>
        </div>
    </main>

    <h2 id="balance">$1000000</h2>

    <div id="buttons">
        <button id="homeUpgrades" onclick="openModal('upgrades')">Home Upgrades</button>
        <span>
            <button id="fun" onclick="openModal('funActivities')">Fun Activities</button>
            <button id="learn" onclick="openModal('learnActivities')">Learn</button>
        </span>
    </div>

    
    <div id="menu">
        <button id="manage"><img src="./images/person fill0.svg"></button>
        <a href="leaderboard.html"><button id="leaderboard"><img src="./images/Material Symbols Trophy.svg"></button></a>
        <button id="settings"><img src="./images/settings.svg"></button>
    </div>

    <script src="/scripts/game.js"></script>
</body>
</html>
