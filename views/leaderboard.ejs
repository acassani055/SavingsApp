<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/leaderboard.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
    <div id="top">
        <h1>The Title</h1>
    </div>

<h2>Leaderboard:</h2>

<div id="headings">
    <h4>Pos</h4>
    <h4>Username</h4>
    <h4>Level</h4>
    <h4>Money</h4>
    <h4>Happiness</h4>
</div>

<% for (let user of users) { %>
<div class="user">
    <p><%= user.position %></p>
    <p><%= user.username %></p>
    <p><%= user.level %></p>
    <p><%= user.balance %></p>
    <p><%= user.happiness %></p>
</div>
<% } %>

    <div id="menu">
        <a href="/"><button id="manage"><img src="/assets/images/person fill0.svg"></button></a>
        <a href="/leaderboard"><button id="leaderboard"><img src="/assets/images/Material Symbols Trophy.svg"></button></a>
        <button id="settings"><img src="/assets/images/settings.svg"></button>
    </div>

    <script src="/scripts/leaderboard.js"></script>
</body>
</html>
