<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/leaderboard.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
    <nav>
        <span></span>
        <a href="/" id="back"><img src="/assets/images/Arrow Back Icon.svg"></a>
        <h1>Global Leaderboard</h1>
        <span>
            <a href="/"><img src="/assets/images/person fill0.svg"></a>
            <a href="/leaderboard"><img id="trophy" src="/assets/images/Material Symbols Trophy.svg"></a>
            <a href="/logout"><span class="material-symbols-outlined">logout</span></a>
        </span>
    </nav>

    <div id="headings">
        <h4 class="part">Pos</h4>
        <h4 class="part">Username</h4>
        <h4 class="part">Level</h4>
        <h4 class="part">Money</h4>
        <h4 class="part">Happiness</h4>
    </div>

    <% for (let user of users) { %>
    <div class="user">
        <p class="part"><%= user.position %></p>
        <p class="part"><%= user.username %></p>
        <p class="part"><%= user.level %></p>
        <p class="part">$<%= user.balance.toLocaleString() %></p>
        <p class="part"><%= parseInt(100 * user.happiness) %>%</p>
    </div>
    <% } %>
</body>
</html>

